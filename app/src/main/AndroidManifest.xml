<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.odairtns.trackyourexpenses">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.odairtns.trackyourexpenses.Activities.InsertRecord"></activity>
        <activity android:name="com.odairtns.trackyourexpenses.Activities.NewTrip" />
        <activity android:name="com.odairtns.trackyourexpenses.Activities.SearchTrip" />
        <activity android:name="com.odairtns.trackyourexpenses.Activities.TripChart" />
        <activity android:name="com.odairtns.trackyourexpenses.Activities.ViewTripRecord" />
        <activity
            android:name="com.odairtns.trackyourexpenses.Activities.TripCurrencies"
            android:label="@string/title_activity_trip_currencies"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.odairtns.trackyourexpenses.Activities.ExpenseType"
            android:label="@string/title_activity_expense_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.odairtns.trackyourexpenses.Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.odairtns.trackyourexpenses.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>